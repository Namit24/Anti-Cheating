{
  "manifest_version": 3,
  "name": "Exam Proctor",
  "version": "1.0",
  "description": "Monitors student activity during exams to prevent cheating",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webNavigation",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://anti-cheating-livid.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}