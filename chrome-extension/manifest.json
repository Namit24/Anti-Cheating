{
  "manifest_version": 3,
  "name": "Exam Proctor",
  "version": "1.0",
  "description": "An exam proctoring system to prevent cheating during online exams",
  "permissions": ["storage", "tabs", "webNavigation", "clipboardRead", "clipboardWrite"],
  "host_permissions": ["http://localhost:3000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {}
}
